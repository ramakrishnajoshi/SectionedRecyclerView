<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/foootball_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:visibility="gone"
                app:srcCompat="@drawable/ic_live_score_overview_red_rectangle"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:id="@+id/foootball_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_live_score_overview_red_rectangle">

                <TextView
                    android:id="@+id/timeline_item_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOALS"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>




            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layerType="software"
                android:background="#e9e9e9"
                android:layout_below="@id/foootball_icon2"
                app:srcCompat="@drawable/vertical_line"/>





        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

        </LinearLayout>


    </LinearLayout>


</LinearLayout>