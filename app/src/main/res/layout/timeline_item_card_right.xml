<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#e9e9e9"
                app:srcCompat="@drawable/vertical_line"/>

            <ImageView
                android:id="@+id/timeline_right_card_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_yellow_card_live_score_overview"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/timeline_item_right_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09'"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/timeline_right_card_type_image"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background_livescore_overview_grey">

            <TextView
                android:id="@+id/timeline_item_right_card_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yellow Card to"
                android:textColor="#e6e6e6"
                android:textSize="12sp"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/timeline_item_right_card_card_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hossam Hassan"
                android:textSize="14sp"
                android:textColor="#e6e6e6"
                android:textStyle="bold"
                android:textAlignment="textEnd"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>